{
  "id": "filesystem",
  "name": "Filesystem Hierarchy",
  "type": "filesystem",
  "level": "beginner",
  "metadata": {
    "path": "/",
    "description": "Linux filesystem structure following the Filesystem Hierarchy Standard (FHS 3.0). Everything is a file philosophy.",
    "created_by": "FHS working group",
    "managed_by": "Linux Foundation"
  },
  "connections": {
    "reads_from": ["disk_blocks", "inodes", "dentries"],
    "writes_to": ["disk", "journal", "cache"],
    "controls": ["file_access", "permissions", "quotas"],
    "controlled_by": ["VFS", "mount", "kernel"]
  },
  "operations": {
    "commands": [
      {"cmd": "df -h", "description": "Show disk usage human-readable"},
      {"cmd": "du -sh *", "description": "Directory sizes"},
      {"cmd": "mount", "description": "Show mounted filesystems"},
      {"cmd": "findmnt", "description": "Tree view of mounts"}
    ],
    "system_calls": ["open", "read", "write", "close", "stat", "chmod", "chown"],
    "config_files": [
      {"path": "/etc/fstab", "format": "fstab", "editable": true},
      {"path": "/proc/mounts", "format": "mount", "editable": false}
    ]
  },
  "cs_concepts": {
    "category": ["Operating Systems", "Data Structures"],
    "topics": ["Tree structure", "Inodes", "Hard/soft links", "Mount points"],
    "difficulty": "beginner"
  },
  "children": [
    {
      "id": "root_dir",
      "name": "/ (Root)",
      "type": "filesystem",
      "level": "beginner",
      "metadata": {
        "description": "Root directory - top of the filesystem hierarchy. All paths start from here.",
        "path": "/"
      },
      "children": [
        {
          "id": "bin_dir",
          "name": "/bin",
          "type": "filesystem",
          "level": "beginner",
          "metadata": {
            "description": "Essential command binaries for all users. Must be available in single-user mode.",
            "path": "/bin"
          },
          "operations": {
            "commands": [
              {"cmd": "ls /bin", "description": "List essential binaries"},
              {"cmd": "which ls", "description": "Find command location"}
            ]
          },
          "examples": [
            {
              "title": "Common /bin commands",
              "code": "ls, cp, mv, rm, cat, echo, mkdir, chmod",
              "explanation": "Core utilities needed for basic system operation"
            }
          ]
        },
        {
